<h1>Add New Vendor</h1>
<form action="/vendors" method="POST">
	<div>
		<label for="name">Vendor Name:</label>
		<input type="text" id="name" name="name" required>
	</div>
	<div>
		<label for="email">Email:</label>
		<input type="email" id="email" name="email" required>
	</div>
	<div>
		<label for="phone">Phone:</label>
		<input type="text" id="phone" name="phone" required>
	</div>
	<div>
		<label for="address">Address:</label>
		<input type="text" id="address" name="address" required>
	</div>
	<button type="submit">Save Vendor</button>
	<a href="/vendors" class="btn btn-secondary" style="margin-left:10px;">Get the list of vendors</a>

</form>

<table>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
    <% vendors.forEach(function(vendor) { %>
      <tr>
        <td><%= vendor.name %></td>
        <td>
          <a href="/vendors/<%= vendor._id %>/edit">Edit</a>
          <form action="/vendors/<%= vendor._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
