<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Product</title>
  <link rel="stylesheet" href="/css/styles.css"><!-- optional stylesheet -->
</head>
<body>
  <h1>Add New Product</h1>

  <form action="/products" method="POST" >
    <div>
      <label for="name">Product Name:</label>
      <input type="text" id="name" name="name" required>
    </div>

    <div>
      <label for="price">Price ($):</label>
      <input type="number" id="price" name="price" step="0.01" required>
    </div>

    <div>
      <label for="description">Description:</label>
      <textarea id="description" name="description" rows="4" required></textarea>
    </div>

    <div>
      <label for="category">Category:</label>
      <input type="text" id="category" name="category" required>
    </div>

    <div>
      <label for="stock">Stock:</label>
      <input type="number" id="stock" name="stock" required>
    </div>

    <div>
      <label for="vendor">Vendor:</label>
      <input type="text" id="vendor" name="vendor" required>
    </div>

  <button type="submit">Save Product</button>
  <a href="/products" class="btn btn-secondary" style="margin-left:10px;">Get the list of products</a>
  </form>

  <table>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
    <% products.forEach(function(product) { %>
      <tr>
        <td><%= product.name %></td>
        <td>
          <a href="/products/<%= product._id %>/edit">Edit</a>
          <form action="/products/<%= product._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
